@using Microsoft.AspNet.Identity
@{
    Layout = null;
}

<!-- HEADER -->
<header>
    <!-- TOP HEADER -->
    <div id="top-header">
        <div class="container">
            <ul class="header-links pull-left">
                <li><a href="#"><i class="fa fa-phone"></i> 01208774358</a></li>
                <li><a href="#"><i class="fa fa-envelope-o"></i> phongdtgcs16044@fpt.edu.vn</a></li>
                <li><a href="#"><i class="fa fa-map-marker"></i> 142 Phạm Phú Thứ</a></li>
            </ul>
            <ul class="header-links pull-right">
                @using (Html.BeginForm("Logout", "Account", FormMethod.Post, new { @id = "frmLogout" }))
                {
                    if (Request.IsAuthenticated)
                    {
                        @Html.AntiForgeryToken()
                        <li>
                            <a>Hello,@User.Identity.Name</a>
                        </li>
                        <li><a href="/history.html"><i class="fa fa-user-o"></i> History</a></li>
                        <li><a href="#" id="btnLogout"><i class="fa fa-user-o"></i> Logout</a></li>
                    }
                    else
                    {

                        <li><a href="/login.html"><i class="fa fa-user-o"></i> Login</a></li>
                        <li><a href="/register.html"><i class="fa fa-user-o"></i> Register</a></li>
                    }
                }
            </ul>
        </div>
    </div>
    <!-- /TOP HEADER -->
    <!-- MAIN HEADER -->
    <div id="header">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">
                <!-- LOGO -->
                <div class="col-md-3">
                    <div class="header-logo">
                        <a href="/homepage.html" class="logo">
                            <img src="/Assets/client/img/logo.png" alt="">
                        </a>
                    </div>
                </div>
                <!-- /LOGO -->
                <!-- SEARCH BAR -->
                <div class="col-md-6">
                    <div class="header-search">
                        <form method="get" action="/search.html/">
                            <input class="input" placeholder="Search here" id="txtKeyword" name="keyword">
                            <button class="search-btn" id="btnSearch">Search</button>
                        </form>
                    </div>
                </div>
                <!-- /SEARCH BAR -->
                <!-- ACCOUNT -->
                <div class="col-md-3 clearfix">
                    <div class="header-ctn">

                        @{ Html.RenderAction("Index", "ShoppingCart");}
                        <!-- Menu Toogle -->
                        <div class="menu-toggle">
                            <a href="#">
                                <i class="fa fa-bars"></i>
                                <span>Menu</span>
                            </a>
                        </div>
                        <!-- /Menu Toogle -->
                    </div>
                </div>
                <!-- /ACCOUNT -->
            </div>
            <!-- row -->
        </div>
        <!-- container -->
    </div>
    <!-- /MAIN HEADER -->
</header>
<!-- /HEADER -->