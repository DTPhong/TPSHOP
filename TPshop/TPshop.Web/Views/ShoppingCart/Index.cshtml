        <div class="product-img">
            <img src="{{Image}}" alt="">
        </div>
        <div class="product-body">
            <h3 class="product-name"><a href="#">{{ProductName}}</a></h3>
            <h4 class="product-price"><span class="qty quantityP" data-value="{{Quantity}}" data-price="{{Price}}">{{Quantity}}x</span>${{Price}}</h4>
            <button class="plus" data-id="{{ProductId}}"><i class="fa fa-plus"></i></button>
            <button class="minus" data-id="{{ProductId}}"><i class="fa fa-minus"></i></button>
        </div>
        <button class="delete" data-id="{{ProductId}}"><i class="fa fa-close"></i></button>
    </div>
</script>