@model TPshop.Web.Models.FeedbackViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layouts.cshtml";
}
<input type="hidden" id="hidName" value="@Model.ContactDetail.Name" />
<input type="hidden" id="hidAddress" value="@Model.ContactDetail.Name<br/>Phone:@Model.ContactDetail.Phone<br/>Address:@Model.ContactDetail.Address" />
<input type="hidden" id="hidLat" value="@Model.ContactDetail.Lat" />
<input type="hidden" id="hidLng" value="@Model.ContactDetail.Lng" />
<!-- BREADCRUMB -->
<div id="breadcrumb" class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <h3 class="breadcrumb-header">Contact</h3>
                <ul class="breadcrumb-tree">
                    <li><a href="/homepage.html">Home</a></li>
                    <li class="active">Contact</li>
                </ul>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /BREADCRUMB -->
<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-6">
                <!-- Billing Details -->
                <div class="billing-details">
                    <div class="section-title">
                        <h3 class="title">Contact detail</h3>
                    </div>
                    <p>Name: @Model.ContactDetail.Name</p>
                    <p>Email: @Model.ContactDetail.Email</p>
                    <p>Address: @Model.ContactDetail.Address</p>
                    <p>Phone: @Model.ContactDetail.Phone</p>
                    <div id="map" style="height:400px;"></div>
                </div>
                <!-- /Billing Details -->
            </div>
            <div class="col-md-6  order-details">
                @using (Html.BeginForm("SendFeedback", "Contact", FormMethod.Post))
                {
                    <!-- Billing Details -->
                <div class="billing-details">
                    <div class="section-title">
                        <h3 class="title">Feedback form</h3>
                    </div>
                    @if (ViewData["SuccessMsg"] != null)
                    {
                        <div class="alert alert-success" role="alert">
                            <strong>Send feedback success. We will contact you soon.</strong>
                        </div>
                    }
                    @Html.ValidationSummary(false, "", new { @class = "error" })
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Name, new { @class = "input", @placeholder = "Name" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Email, new { @class = "input", @placeholder = "Email" })
                    </div>
                    <div class="form-group">
                        @Html.TextAreaFor(model => model.Message, new { @class = "input", @placeholder = "Message" })
                    </div>
                    <input type="submit" class="primary-btn order-submit" value="Send">
                </div>
                    <!-- /Billing Details -->
                }
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->